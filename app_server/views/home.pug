extends layout

block content
  h1.header=pageHeader.title
  p=pageHeader.text

  .card.mb-3(style='max-width: 100%;')
    .row.g-0
      .col-md-4
        img.img-fluid.rounded-start(src=dynamo.image alt=dynamo.alt)
      .col-md-8
        .card-body
          h5.card-title= dynamo.name
          p.card-text
            | #{dynamo.description}

          h5.card-title Nicknames
          p.card-text= dynamo.nicknames

          h5.card-title Founded
          p.card-text= dynamo.founded

          h5.card-title Ground
          each g in dynamo.ground
            p.card-text= g

          h5.card-title Capacity
          each c in dynamo.capacity
            p.card-text= c

          h5.card-title Owner(s)
          each o in dynamo.owners
            p.card-text= o

          h5.card-title President
          p.card-text= dynamo.president

          h5.card-title Manager
          p.card-text= dynamo.manager

          h5.card-title League
          p.card-text= dynamo.league

          h5.card-title= dynamo.season
          p.card-text= dynamo.position

          h5.card-title Achievements
          .table-responsive
            table.table.table-striped.table-bordered
              thead
                tr
                  th Title
                  th Count
                  th Years
              tbody
                each item in dynamo.achievements
                  tr
                    td= item.title
                    td= item.count
                    td= item.years

